# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your_very_secret_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/travel_planner

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_API_AUDIENCE=your-api-identifier

# Google Gemini Configuration
GOOGLE_API_KEY=your-google-api-key

# RapidAPI Configuration for GeoDB
RAPIDAPI_KEY=your-rapidapi-key
RAPIDAPI_HOST=wft-geo-db.p.rapidapi.com

# OpenTripMap API for points of interest
OPENTRIPMAP_API_KEY=your-opentripmap-api-key

# OpenRouteService API for distance calculation
OPENROUTESERVICE_API_KEY=your-openrouteservice-api-key

# AeroDataBox API for Flights (on RapidAPI)
AERODATABOX_API_KEY=your-aerodatabox-rapidapi-key
AERODATABOX_API_HOST=aerodatabox.p.rapidapi.com

# Amadeus API for Hotel data and Real-time Flight Pricing (FREE: 2000 calls/month)
AMADEUS_API_KEY=your-amadeus-api-key
AMADEUS_API_SECRET=your-amadeus-api-secret

# CORS Configuration (optional)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
